<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.teamup.demo.userManage.mapper.CodeMapper">
    <insert id="addCode" parameterType="com.teamup.demo.userManage.entity.MailCode" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into
            captcha("user","sendType",code,"sendTime")
        values(#{user},#{sendType},#{code},#{sendTime})
    </insert>
    <select id="findCodeByUser" resultType="String">
        select code from captcha where  "user" = #{user} and "sendTime" > #{time}-5*60*1000 and "sendType" = #{type} order by "sendTime" desc limit 1
    </select>
    <delete id="deleteInvalid">
        delete from captcha where #{time} -5*60*1000 > "sendTime"
    </delete>
</mapper>
